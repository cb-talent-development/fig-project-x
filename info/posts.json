                            "dataType": "integer",
                            "allowMultiple": false,
                            "paramType": "query",
                            "minimum": "10",
                            "maximum": "50"
                        },
                        {
                            "name": "offset",
                            "description": "offset for pagination purposes",
                            "defaultValue": "0",
